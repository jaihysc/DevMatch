<div class="container">
  <br>
  <div class="row">
    <div class="col-md-6 offset-md-3 card">
      <div class="card-body">
        <% if params[:plan] == '1'%>
          <h3 class="btn-primary btn-lg btn-block text-center ">Basic plan</h3>
          <ul class="list-inline text-center">
            <li class="list-inline-item no-border"><i class="fas fa-money-bill"></i> Free</li>
            <li class="list-inline-item no-border"><i class="fas fa-check"></i> Domestic jobs</li>
          </ul>
          <% @id = 1 %>
        <% else %>
            <h3 class="btn-success btn-lg btn-block text-center">Pro plan</h3>
            <ul class="list-inline text-center">
              <li class="list-inline-item"><i class="fas fa-money-bill"></i> $10/Month</li>
              <li class="list-inline-item "><i class="fas fa-check-double"></i> Global jobs</li>
              <li class="list-inline-item"><i class="fas fa-check-double"></i> Post job offers</li>
            </ul>
          <% @id = 2 %>
        <% end %>

        <div class="text-center">
          <h2>Sign up</h2>
        </div>

        <% if @id == 1%>
          <%= render "basic_form" %>
        <% else %>
          <%= render "pro_form" %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>

    <!--Selectors for the other plans-->
    <div class="col-md-3 card">
      <br>
      <h2 class="card-title text-center">Plans</h2>

      <div class="card-body">
          <% if @id == 1%>
            <%= link_to "Pro", new_user_registration_path(plan: '2'), class: 'btn btn-success btn-lg btn-block' %>
            <ul class="list-group list-group-flush">
              <li class="list-group-item no-border"><i class="fas fa-money-bill"></i> $10/Month</li>
              <li class="list-group-item no-border"><i class="fas fa-check-double"></i> Global jobs</li>
              <li class="list-group-item no-border"><i class="fas fa-check-double"></i> Post job offers</li>
            </ul>
          <% else %>
            <%= link_to "Basic", new_user_registration_path(plan: '1'), class: 'btn btn-primary btn-lg btn-block' %>
            <ul class="list-group list-group-flush">
              <li class="list-group-item no-border"><i class="fas fa-money-bill"></i> Free</li>
              <li class="list-group-item no-border"><i class="fas fa-check"></i> Domestic jobs</li>
            </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>

